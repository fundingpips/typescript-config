{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "FundingPips Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "jsx": "react",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "stripInternal": true,
    "composite": true,
    "allowImportingTsExtensions": false,
    "skipDefaultLibCheck": false,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
