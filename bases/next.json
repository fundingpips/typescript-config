{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "FundingPips Next.js",
  "extends": ["./base.json", "@tsconfig/next/tsconfig.json"],
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": false,
    "checkJs": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "public",
    "*.config.js",
    "*.config.mjs"
  ]
}
